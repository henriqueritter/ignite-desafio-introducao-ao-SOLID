{
  "openapi": "3.0.0",
  "info": {
    "title": "Atlas Documentation",
    "description": "This is an API for user registration",
    "version": "1.0.0",
    "contact": {
      "email": "henrique@email.com"
    }
  },
  "paths": {
    "/users": {
      "post": {
        "tags": [
          "Users"
        ],
        "summary": "Create a new user",
        "description": "Create a new user",
        "requestBody": {
          "required": "true",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  }
                },
                "example": {
                  "name": "John Doe",
                  "email": "john@doe.com"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string",
                      "example": "de3449b8-bdbe-4e2b-b6c7-4b32c83d9ea3"
                    },
                    "name": {
                      "type": "string",
                      "example": "1234"
                    },
                    "email": {
                      "type": "string",
                      "example": "1234"
                    },
                    "admin": {
                      "type": "boolean",
                      "example": "false"
                    },
                    "created_at": {
                      "type": "string",
                      "example": "2021-07-04T18:46:20.056Z"
                    },
                    "updated_at": {
                      "type": "string",
                      "example": "2021-07-04T18:46:20.056Z"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "User already exists.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "example": "User already exists."
                    }
                  }
                }
              }
            }
          }
        }
      },
      "get": {
        "tags": [
          "Users"
        ],
        "summary": "List all users",
        "description": "Only admin user can access",
        "parameters": [
          {
            "name": "user_id",
            "required": true,
            "in": "header",
            "schema": {
              "type": "string($uuid)"
            }
          }
        ]
      }
    },
    "/users/{user_id}": {
      "get": {
        "tags": [
          "Users"
        ]
      }
    },
    "/users/{user_id}/admin": {
      "patch": {
        "tags": [
          "Users"
        ]
      }
    }
  }
}